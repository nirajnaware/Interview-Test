<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="android:windowBackground">@color/colorApplicationBackground</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="android:windowLightStatusBar" tools:ignore="NewApi">true</item>
    </style>

    <!--toolbar style -->
    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="android:textColor">@color/colorMenuItemColor</item>
        <item name="drawerArrowStyle">@style/DrawerHamburgerStyle</item>
        <item name="android:textColorPrimary">@color/colorMenuItemColor</item>
        <item name="android:textColorSecondary">@color/colorMenuItemColor</item>
    </style>

    <style name="DrawerHamburgerStyle" parent="@style/Widget.AppCompat.DrawerArrowToggle">
        <item name="spinBars">true</item>
        <item name="color">@color/colorHamburger</item>
    </style>


    <style name="customCard" parent="Widget.MaterialComponents.CardView">
        <item name="cardBackgroundColor">@color/colorCardBackground</item>
        <item name="cardCornerRadius">3dp</item>
        <item name="cardElevation">1dp</item>
        <item name="android:drawablePadding">5dp</item>
        <item name="cardUseCompatPadding">true</item>
        <item name="contentPadding">12dp</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:layout_marginStart">8dp</item>
        <item name="android:layout_marginEnd">8dp</item>
    </style>

    <style name="AppTheme.Font">
        <item name="android:fontFamily">@font/roboto_regular</item>
        <item name="android:includeFontPadding">false</item>
    </style>

    <style name="AppTheme.Font.Regular">
        <item name="android:fontFamily">@font/roboto_regular</item>
        <item name="android:includeFontPadding">false</item>
    </style>

    <style name="AppTheme.Font.Medium">
        <item name="android:fontFamily">@font/roboto_medium</item>
        <item name="android:includeFontPadding">false</item>
    </style>

    <style name="AppTheme.Font.Light">
        <item name="android:fontFamily">@font/roboto_light</item>
        <item name="android:includeFontPadding">false</item>
    </style>

    <style name="TextViewTitle">
        <item name="android:textAppearance">@style/AppTheme.Font.Medium</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/colorLargeText</item>
        <item name="android:drawablePadding">5dp</item>
    </style>

    <style name="TextViewSubTitle">
        <item name="android:textAppearance">@style/AppTheme.Font.Regular</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/colorSubTitle</item>
        <item name="android:drawablePadding">5dp</item>
    </style>

    <style name="TextViewDescription">
        <item name="android:textAppearance">@style/AppTheme.Font.Light</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/colorDescription</item>
        <item name="android:drawablePadding">5dp</item>
    </style>

</resources>